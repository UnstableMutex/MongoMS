<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
<Style TargetType="Button" x:Key="OKButton">
    <Setter Property="MinWidth" Value="75"/>
    <Setter Property="Margin" Value="4"/>
    <Setter Property="Content" Value="OK"/>
    <Setter Property="IsDefault" Value="True"/>
</Style>
  <Style x:Key="pics" TargetType="Image">
      <Setter Property="Width" Value="16"/>
       <Setter Property="Height" Value="16"/>
    </Style>
    <Style x:Key="ArrowUpClear" TargetType="Image" BasedOn="{StaticResource pics}">
      <Setter Property="Width" Value="16"/>
       <Setter Property="Height" Value="16"/> 
        <Setter Property="Source" Value="arrow_up.png"/>
    </Style>  
    <Style  x:Key="ArrowUpStyle" TargetType="Image" BasedOn="{StaticResource ArrowUpClear}">
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
    </Style>
    <Image x:Key="PlusImage" Style="{StaticResource pics}" Source="plus.png"></Image>
    
</ResourceDictionary>